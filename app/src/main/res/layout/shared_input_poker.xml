        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="6dp"
        android:textAppearance="@style/error_text_style" />

    <TextView
        android:layout_below="@+id/poker_4_error_msg"
        android:id="@+id/input_poker_5_title"
        android:layout_marginTop="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="@string/poker_value_5"
        android:textAppearance="@style/label_text_style"
        android:textColor="@color/colorBlack" />

    <EditText
        android:layout_width="match_parent"
        android:layout_below="@+id/input_poker_5_title"
        android:id="@+id/input_poker_5"
        android:layout_height="48dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="12dp"
        android:hint="@string/poker_hint"
        android:textAppearance="@style/hint_text_style"
