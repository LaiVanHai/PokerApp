<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorLightBlue</item>
        <item name="colorPrimaryDark">@color/colorBasicBlue</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="title_style">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="hint_text_style">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="label_text_style">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="error_text_style">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#D13F57</item>
    </style>

    <style name="ColoredButton" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorButtonNormal">@drawable/btn_color</item>
    </style>

</resources>
